{
  "manifest_version": 3,
  "name": "WhatsApp Image Downloader",
  "version": "1.0",
  "description": "Scarica tutte le immagini visibili su WhatsApp Web",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_title": "Scarica immagini",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ]
}